@model Schooldb2022.Models.Classes
@{
    ViewBag.Title = "DeleteConfirm";
}


<div id="containershow" style="border:1px solid; padding:1em;">
    <nav>
        <a class="navlink" href="/Class/Show/@Model.ClassId">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete @Model.ClassName?</h2>
    <p>This action can not be undone.</p>
    <form style="text-align:center" method="post" action="/Class/Delete/@Model.ClassId">
        <button class="delbtn" href="">Confirm Delete</button>
    </form>
</div>