@model Schooldb2022.Models.Students
@{
    ViewBag.Title = "DeleteConfirm";
}


<div id="containershow" style="border:1px solid; padding:1em;">
    <nav>
        <a class="navlink" href="/Student/Show/@Model.StudentId">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete @Model.StudentFname @Model.StudentLname?</h2>
    <p>This action can not be undone.</p>
    <form style="text-align:center" method="post" action="/Student/Delete/@Model.StudentId">
        <button class="delbtn" href="">Confirm Delete</button>
    </form>
</div>