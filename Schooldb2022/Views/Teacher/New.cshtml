
@{
    ViewBag.Title = "New";
}

<div id="containershow" style="border:1px solid; padding:1em;">
    <nav>
         <a class="navlink" href="/Teacher/List">Back To Teachers</a>
    </nav>
    <h2>New Teacher</h2>
    
    <form name="myform" action="/Teacher/Create" method="POST">

        <label style="display:block;" for="TeacherFname" >First Name:</label>
        <input type="text" id="TeacherFname" name="TeacherFname" />
        <span style="color:red;" id="LFname"></span>

        <label style="display:block;" for="TeacherFname" >Last Name:</label>
        <input type="text" id="TeacherLname" name="TeacherLname" />
        <span style="color:red;" id="LLname" ></span>

        <label style="display:block;" for="EmployeeNumber" >Employee Number:</label>
        <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
        <span style="color:red;" id="LENum"></span>

        <label style="display:block;" for="Hiredate" >Hire Date:</label>
        <input type="date" id="Hiredate" name="Hiredate" />
        <span style="color:red;" id="LHdate" ></span>

        <label style="display:block;" for="Salary" >Salary Amount:</label>
        <input type="text" id="Salary" name="Salary" placeholder="$" />
        <span style="color:red;" id="Lsal"></span>

        <input type="submit" value="Add Teacher" class="addbtn" name="subbtn" />
    </form>

</div>
<script>

    window.onload = pageload;

    function pageload() {
       
        var formhandler = document.forms.myform;
        var LFname = document.getElementById("LFname");  
        var LLname = document.getElementById("LLname"); 
        var LENum = document.getElementById("LENum"); 
        var LHdate = document.getElementById("LHdate"); 
        var Lsal = document.getElementById("Lsal"); 
        var fname = formhandler.TeacherFname;
        var lname = formhandler.TeacherLname;
        var empN = formhandler.EmployeeNumber;
        var hired = formhandler.Hiredate;
        var sal = formhandler.Salary;
        var subbtn = formhandler.subbtn;
        var idregex = /^[0-9]+$/;

        formhandler.onsubmit = onprocess;

        function onprocess() {

            if (fname.value === "") {
                LFname.innerHTML = "*Please fill the First Name";
                fname.focus();
                return false;
            } else {
                LFname.innerHTML = "";
                fname.blur();
                lname.focus();
            }
            if (lname.value === "") {
                LLname.innerHTML = "*Please fill the Last Name";
                lname.focus();
                return false;
            } else {
                LLname.innerHTML = "";
                lname.blur();
                empN.focus();
            }
            if (empN.value === "") {
                LENum.innerHTML = "*Please fill the Employee Number";
                empN.focus();
                return false;
            } else {
                LENum.innerHTML = "";
                empN.blur();
                hired.focus();
            }

            if (hired.value === "") {
                LHdate.innerHTML = "*Please fill the Hire Date";
                hired.focus();
                return false;
            } else {
                LHdate.innerHTML = "";
                hired.blur();
                sal.focus();
            }
            if (sal.value === "" || (!idregex.test(empN.value))) {
                Lsal.innerHTML ="*Please fill the Salary"
                sal.focus();
                return false;
            } else {
                Lsal.innerHTML = ""
                sal.blur();
                subbtn.focus();
            }
        }

    }

</script>
