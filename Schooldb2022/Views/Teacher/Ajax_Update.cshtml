@model Schooldb2022.Models.Teacher
@{
    ViewBag.Title = "Ajax_Update";
}

<div id="containershow" style="border:1px solid; padding:1em;">
    <h2>Update Teacher</h2>
    <div>
        <label>Teacher First Name</label>
        <input type="text" value="@Model.TeacherFname" id="TeacherFname" />
    </div>
    <div>
        <label>Teacher Last Name</label>
        <input type="text" value="@Model.TeacherLname" id="TeacherLname" />
    </div>
    <div>
        <label for="EmployeeNumber">Employee Number:</label>
        <input type="text" value="@Model.EmployeeNumber" id="EmployeeNumber" />
    </div>
    <div>
        <label for="Hiredate">Hire Date:</label>
        <input type="text" id="Hiredate" value="@Model.Hiredate"  />
    </div>
    <div>
        <label for="Salary">Salary Amount:</label>
        <input type="text" id="Salary" value="@Model.Salary"  />
    </div>

    <button onclick="UpdateTeacher(@Model.TeacherId);">Update Teacher</button>
</div>